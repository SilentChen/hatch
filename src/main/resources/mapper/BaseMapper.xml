<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.guofang.hatch.dao.BaseDao">
    <insert id="insert">
        insert into #{table}
         <if test="'*' != columns"> (#{columns}) </if>
         values
        <foreach collection="values" item="value" index="index" separator=",">
                #{value}
        </foreach>
    </insert>

    <update id="update">
        update #{table} set
        <foreach collection="kvs" item="kv" index="index" separator=",">
            #{kv.key} + "=" + #{kv.val}
        </foreach>
        where id = #{id}
    </update>
</mapper>